<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artists_index_entry"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:padding="6dp"
    android:clipChildren="false">

    <ImageView
        android:id="@+id/artists_index_artist_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="@string/artists_index_entry_icon_description"
        android:padding="4dp"
		android:paddingLeft="6dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:gravity="center_vertical">

    	<TextView
	        android:id="@+id/artists_index_artist_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textColor="@color/list_item_text_color"
	        android:textSize="24dp"
	        />

    	<TextView
    	    android:id="@+id/artists_index_artist_count"
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="@color/list_item_text_color"
        	android:textSize="12dp"
    	    />
	</LinearLayout>
</LinearLayout>