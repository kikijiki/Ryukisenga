<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlist_entry"
    android:layout_width="match_parent"
    android:layout_height="@dimen/normal_height"
    android:gravity="center_vertical|bottom"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/playlist_item_icon"
        android:layout_width="@dimen/normal_height"
        android:layout_height="@dimen/normal_height"
        android:contentDescription="@string/playlist_entry_icon_description"
        android:src="@drawable/ic_launcher"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_height"
        android:orientation="vertical" >

		<TextView
	        android:id="@+id/playlist_item_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom"
	        android:textSize="32dp"        
	        android:singleLine="true"
	        android:paddingLeft="6dp"
	        android:textColor="#F0F0F0" />
		
	    <TextView
	        android:id="@+id/playlist_item_style"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom"
	        android:textSize="12dp"        
	        android:singleLine="true"
	        android:paddingLeft="6dp"
	        android:textColor="#C0C0C0" />
		
	</LinearLayout>
	
</LinearLayout>